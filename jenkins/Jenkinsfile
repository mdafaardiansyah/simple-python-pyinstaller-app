node {
    def customImage
    
    stage('Preparation') {
        // Checkout source code
        checkout scm
    }
    
    stage('Build') {
        docker.image('python:2-alpine').inside {
            // Buat direktori test-reports jika belum ada
            sh 'mkdir -p test-reports'
            // Compile Python files
            sh 'python -m py_compile sources/add2vals.py sources/calc.py'
        }
    }
    
    stage('Test') {
        docker.image('qnib/pytest').inside {
            // Jalankan pytest dengan output ke file XML
            sh 'py.test --verbose --junit-xml test-reports/results.xml sources/test_calc.py'
            // Publikasikan hasil test
            junit 'test-reports/results.xml'
        }
    }
    
    stage('Deliver') {
        // Gunakan tty untuk mencegah container berhenti terlalu cepat
        docker.image('cdrx/pyinstaller-linux:python2').inside('--tty') {
            try {
                // Buat executable dengan PyInstaller
                sh 'pyinstaller --onefile sources/add2vals.py'
                // Arsipkan hasilnya
                archiveArtifacts 'dist/add2vals'
            } catch (error) {
                echo "Error during Deliver stage: ${error}"
                throw error
            }
        }
    }
}